<mjml>
  <mj-head>
    <mj-font name="Barlow" href="https://fonts.googleapis.com/css2?family=Barlow:400"></mj-font>
    <mj-attributes>
      <mj-text font-family="Barlow, sans-serif" font-weight="400" font-size="14px" color="#344054" line-height="20px"></mj-text>
    </mj-attributes>
    <mj-style>
    .hover-blue a {
        background: #D0D8DF!important;
        color: #344054!important;
        box-shadow:0 0 0 1px #C0C5CD;
    }
      .hover-blue a:hover {
       background: #EAEBF0!important;
       color:  #667085!important;
       box-shadow: 0 1px 0 #EFF0F5 inset, 
      						 0 -1px 0 #DADBE0 inset,
      						 0 0 0 1px #C0C5CD;
     }
     </mj-style>
  </mj-head>
  
  <mj-body>

    <mj-section padding="20px" background-color="#ffffff">
      <mj-column>
        <mj-image align="left" width="250px" src="cid:provider-logo-file-encoded"></mj-image>
        <mj-text>
          <p>Hi {{organizationName}},</p>
          <p>Attached is your invoice for {{currencySymbol}}{{amtDue}}.</p>
          <p>You can either <a href="{{paymentLink}}">pay for this online</a> or, if available, use the alternative payment methods provided in the attached invoice.</p>
        </mj-text>
        
        <mj-button align="left" href="{{paymentLink}}" background-color="#D0D8DF" color="#344054" padding="0px 20px" css-class="hover-blue">
          Pay online
        </mj-button>
        
        <mj-text>
          <p>Have a great day!</p>
        </mj-text>

      </mj-column>
    </mj-section>
    
  </mj-body>
</mjml>
